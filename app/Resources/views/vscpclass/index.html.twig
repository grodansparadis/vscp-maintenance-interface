{% extends 'base.html.twig' %}

{% block body %}
<br>
<br>
<br>
  <h2>{{ 'Classes' | trans }}</h2>

        <div>
          <a class="btn btn-default btn-sm glyphicon glyphicon-plus" href="{{ path('vscpmaint_vscpclassadd') }}">
            {{ 'Add' | trans }}
          </a>
        </div>
        <div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>{{ 'ID' | trans }}</th>
                  <th>{{ 'Class' | trans }}</th>
                  <th>{{ 'Name' | trans }}</th>
                  <th>{{ 'Token' | trans }}</th>
                  <th>{{ 'Description' | trans }}</th>
                  <th colspan = 2>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
			  {% for vscpclass in vscpclass %}
                <tr>
                  <td>{{ vscpclass.id}}</td>
                  <td>{{ vscpclass.vscpclass | trans }}</td>
                  <td>{{ vscpclass.vscpclassName | trans }}</td>
                  <td>{{ vscpclass.vscpclassToken | trans }}</td>
                  <td>{{ vscpclass.vscpclassDescription | trans }}</td>
                  <td>
                    <a class="btn glyphicon glyphicon-pencil" href="{{ path('vscpmaint_vscpclassedit', {'id': vscpclass.id}) }}">
                    <a class="btn glyphicon glyphicon-trash" href="{{ path('vscpmaint_vscpclassdelete', {'id': vscpclass.id}) }}">
                   </td>
                </tr>
			  {% else %}
			    <p>{{ 'No record in this table' | trans }}.</p>
			  {% endfor %}
              </tbody>
            </table>
          </div>
      </div>


{% endblock %}


