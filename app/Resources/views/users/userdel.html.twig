{% extends 'base.html.twig' %}

{% block body %}

  <h2>{{ 'Delete a user' | trans }}</h2>

  <p>
    Confirm you want to delete user {{ user.username }}.
  </p>

  <form action="{{ path('vscpmaint_userdelete', {'username': user.username}) }}" method="post">
    <a href="{{ path('vscpmaint_user')}}" class="btn btn-default glyphicon glyphicon-chevron-left">
      Back
    </a>
    <input type="submit" value="Delete" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}